pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('env') {
            steps {
                sh 'mvn --version'
                sh 'echo $GITHUB_WORKSPACE'
            }
        }
        stage('build') {
            steps {
                dir("${GITHUB_WORKSPACE}/demo/java") {
                    sh 'ls -al .'
                    sh 'mvn clean install -e'
                }
            }
        }
    }
}